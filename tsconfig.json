{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "rootDir": "./",
        "inlineSourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "lib": ["ES2022"],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
